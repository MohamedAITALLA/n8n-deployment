# n8n Configuration
N8N_HOST=0.0.0.0
N8N_PORT=5000
N8N_PROTOCOL=https
N8N_EDITOR_BASE_URL=https://your-app-name.osc-fr1.scalingo.io

# Security
N8N_ENCRYPTION_KEY=your-encryption-key-here

# Database (PostgreSQL recommended for production)
DB_TYPE=postgresdb
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_HOST=your-postgres-host
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_USER=your-postgres-user
DB_POSTGRESDB_PASSWORD=your-postgres-password

# Basic Auth (optional for security)
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your-secure-password

# Webhook URL
WEBHOOK_URL=https://your-app-name.osc-fr1.scalingo.io/

# Timezone
GENERIC_TIMEZONE=Europe/Paris
TZ=Europe/Paris

# Security headers
N8N_SECURE_COOKIE=true

# Disable user management for simple setup
N8N_USER_MANAGEMENT_DISABLED=true